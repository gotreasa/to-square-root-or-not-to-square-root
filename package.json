{
  "name": "to-square-root-or-not-to-square-root",
  "version": "1.0.0",
  "description": "To square(root) or not to square(root) repository",
  "homepage": "https://github.com/gotreasa/to-square-root-or-not-to-square-root#readme",
  "bugs": {
    "url": "https://github.com/gotreasa/to-square-root-or-not-to-square-root/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gotreasa/to-square-root-or-not-to-square-root.git"
  },
  "license": "AGPL",
  "author": "Gearoid O'Treasaigh",
  "main": "src/Dummy.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json",
    "commit": "git-cz",
    "lint:fix": "eslint --cache --fix",
    "lint:verify": "eslint",
    "prepare": "husky install",
    "prettier:fix": "prettier --write",
    "prettier:verify": "prettier --check \"*.{css,feature,js,json,rb,md,sh,ts,yaml,yml}\"",
    "publish:pact": "env-cmd ts-node test/scripts/publish.pacts.ts",
    "start": "npm run build && npm run start:app",
    "start:app": "export SERVER_PORT=9080 && NODE_OPTIONS='--experimental-vm-modules --es-module-specifier-resolution=node' node dist/app.js",
    "start:app:watch": "export SERVER_PORT=9080 && nodemon",
    "test": "rimraf pact/pacts/* && export SERVER_PORT=9998 && npm run test:api:consumer && env-cmd jest --testTimeout 30000 && npx swagger-mock-validator openapi.yaml pact/pacts/to-square-root-or-not-to-square-root_client-to-square-root-or-not-to-square-root_app.json",
    "test:api:consumer": "jest test/**/*.consumer.pact.test.ts",
    "test:api:consumer:watch": "npm run test:api:consumer -- --watch",
    "test:api:provider": "export SERVER_PORT=9999 && env-cmd jest test/**/*.provider.pact.test.ts --testTimeout 30000",
    "test:api:provider:watch": "npm run test:api:provider -- --watch",
    "test:security": "env-cmd snyk test --all-projects",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest ./test/unit/",
    "test:unit:watch": "npm run test:unit -- --watchAll"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/cz-commitlint": "^17.7.2",
    "@jest/globals": "^29.7.0",
    "@pact-foundation/pact": "^12.1.0",
    "@pact-foundation/pact-core": "^14.0.5",
    "@pact-foundation/pact-node": "^10.17.7",
    "@shopify/eslint-plugin": "^43.0.0",
    "@types/current-git-branch": "^1.1.4",
    "@types/eslint": "^8.44.3",
    "@types/eslint-config-prettier": "^6.11.1",
    "@types/express": "^4.17.18",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.5",
    "@types/lint-staged": "^13.2.0",
    "@types/node": "^20.8.3",
    "@types/swagger-ui-express": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "absolute-version": "^1.0.2",
    "axios": "^1.5.1",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.1",
    "current-git-branch": "^1.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-pact": "^0.11.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "snyk": "^1.1232.0",
    "sonarqube-scanner": "^3.1.0",
    "sort-package-json": "^2.6.0",
    "swagger-mock-validator": "^10.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typesync": "^0.11.1"
  },
  "engines": {
    "node": ">=18.18.2",
    "npm": ">=9.5.1"
  }
}
